<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Application Form</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/public/css/styles.css" type="text/css" />
  </head>
  <body>
    <!--HEADING-->

    <h1>Employee Information Form</h1>
    <hr />
    <h4>Personal Information</h4>
    <hr />

    <!--NAME-->
    <form action="/form" method="post" enctype="multipart/form-data">
      <div class="mb-5">
        <div class="row">
          <label for="formGroupExampleInput" class="form-label">Name</label>
          <div class="col">
            <input
              name="fName"
              type="text"
              class="form-control"
              placeholder="First name"
              required
            />
          </div>
          <div class="col">
            <input
              name="lName"
              type="text"
              class="form-control"
              placeholder="Last name"
              required
            />
          </div>
        </div>
      </div>

      <!--SSN-->

      <label class="control-label mb-2\" for="SSN">SSN</label>
      <div class="mb-5 w-25">
        <input
          id="ssn"
          name="ssn"
          type="text"
          class="form-control"
          pattern="\d{3}-\d{2}-\d{4}"
          placeholder="###--##--####"
          maxlength="13"
          required
        />
      </div>
      <label class="control-label mb-2\" for="DOB">DOB</label>
      <div class="mb-5 w-25">
        <input
          id="dob"
          name="dob"
          type="date"
          class="form-control rounded"
          required
        />
      </div>

      <!--ADDRESS-->

      <label for="formGroupExampleInput2" class="form-label">Address</label>
      <div class="mb-5">
        <input
          name="street"
          type="text"
          class="form-control"
          id="formGroupExampleInput"
          placeholder="Street Address"
          required
        />
      </div>

      <div class="mb-5">
        <div class="row">
          <div class="col">
            <input
              name="city"
              type="text"
              class="form-control"
              placeholder="City"
              required
            />
          </div>
          <div class="col">
            <input
              name="state"
              type="text"
              class="form-control"
              placeholder="State/Province"
              required
            />
          </div>
        </div>
      </div>
      <div>
        <div class="mb-5">
          <input
            name="postalCode"
            type="text"
            class="form-control"
            id="formGroupExampleInput"
            placeholder="Postal/ Zip Code"
            maxlength="5"
            required
          />
        </div>
      </div>
      <!--FILE UPLOAD-->

      <div class="mb-3">
        <label for="formFileSm" class="form-label">Choose Document Type</label>
        <select
          name="selectField"
          class="form-select"
          aria-label="Default select example"
          required
        >
          <option selected id="ID" name="ID" value=" ">Select</option>
          <option value="DL">Driver's Liscense</option>
          <option value="SI">State Issued ID</option>
        </select>
      </div>

      <div class="mb-3">
        <label for="formFileSm" class="form-label">Upload Files</label>
        <input
          name="files"
          class="form-control form-control-sm"
          id="formFileSm"
          type="file"
          required
          multiple
        />
        <div id="emailHelp" class="form-text">
          Two files are required (Front and Back). Validation won't be processed
          without both.
        </div>
      </div>

      <!--BUTTON-->

      <button class="btn btn-primary mb-2" type="submit">Submit</button>
    </form>
    <script>
      $(document).ready(function () {
        $("#ssn").inputmask("000--00--0000");
      });
    </script>
  </body>
</html>
